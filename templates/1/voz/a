    <!-- inserting these scripts at the end to be able to use all the elements in the DOM -->
    <script type="text/javascript" src="/assets/node_modules/jquery/dist/jquery.min.js"></script>
  	<script type="text/javascript" src="/assets/1/voz/js/recorder.js"></script>
  	<script type="text/javascript" src="/assets/1/voz/js/p5.min.js"></script>
  	<script type="text/javascript" src="/assets/1/voz/js/p5.sound.min.js"></script>
  	<script type="text/javascript" src="/assets/1/voz/js/app.js"></script>
  	<script type="text/javascript">
  	
  		$('#recordButton').on('click', function() {moduloSonido.start();});
  		$('#stopButton').on('click', function() {
  			moduloSonido.stop().then(function(blob) {
  				moduloP5.play(blob);
  				//$('#recordingsList').append($(moduloSonido.li(blob)));
  			});
  		});
  		$('#pauseButton').on('click', function() {moduloSonido.pause();});
  		
  	</script>
